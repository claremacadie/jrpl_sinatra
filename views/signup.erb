<h1>Create a new account</h1>
<form method="post" action="/users/signup">
  <div>
    <label for="new_username"> Enter a username:
      <input name="new_username" id="new_username" value="<%= params[:new_username] %>"/>
    </label>
  </div>
  <div>
    <label for="new_firstname"> Enter your first name:
      <input name="new_firstname" id="new_firstname" value="<%= params[:new_firstname] %>"/>
    </label>
  </div>
  <div>
    <label for="new_lastname"> Enter your last name:
      <input name="new_lastname" id="new_lastname" value="<%= params[:new_lastname] %>"/>
    </label>
  </div>
  <div>
    <label for="new_displayname"> Enter your display name:
      <input name="new_displayname" id="new_displayname" value="<%= params[:new_displayname] %>"/>
    </label>
  </div>
  <div>
    <label for="password"> Enter a password:
      <input type="password" id="password" name="password" />
    </label>
  </div>
  <div>
    <label for="reenter_password"> Reenter password:
      <input type="password" id="reenter_password" name="reenter_password" />
    </label>
  </div>
  <button type="submit">Sign Up</button>
</form>