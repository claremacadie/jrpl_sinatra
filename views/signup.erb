<h1>Create a new account</h1>
<form method="post" action="/users/signup">
  <div>
    <label for="new_user_name"> Enter your user name (this will be the name that is displayed):
      <input name="new_user_name" id="new_user_name" value="<%= params[:new_user_name] %>"/>
    </label>
  </div>
  <div>
    <label for="new_email"> Enter your email address:
      <input name="new_email" id="new_email" value="<%= params[:new_email] %>"/>
    </label>
  </div>
  <div>
    <label for="new_password"> Enter a password:
      <input type="password" id="new_password" name="new_password" />
    </label>
  </div>
  <div>
    <label for="reenter_password"> Reenter password:
      <input type="password" id="reenter_password" name="reenter_password" />
    </label>
  </div>
  <button type="submit">Sign Up</button>
</form>